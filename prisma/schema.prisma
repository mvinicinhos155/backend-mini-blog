generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Cadastro {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  role String @default("USER")
  CreatedAt DateTime @default(now())
  posts Post[]
  comments Comment[]
  likes Like[]
}

model Post {
  id Int @id @default(autoincrement())
  title String
  content String 
  authorId Int
  author Cadastro @relation(fields: [authorId], references: [id])
  comments Comment[]
  likes Like[]
}

model Comment {
  id Int @id @default(autoincrement())
  constent String
  postId Int
  post Post @relation(fields: [postId], references: [id])
  authorId Int
  author Cadastro @relation(fields: [authorId], references: [id])
}

model Like {
  id Int @id @default(autoincrement())
  like Int
  postId Int
  post Post @relation(fields: [postId], references: [id])
  authorId Int
  author Cadastro @relation(fields: [authorId], references: [id])
}





